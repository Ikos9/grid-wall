{
  "name": "reflow-grid",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Federico Moretti <dj.ikos90@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn w:tsc\" \"yarn w:rollup\" \"yarn w:browser\"",
    "browser": "concurrently \"tsc -w\" ",
    "build:umd": "rollup --config",
    "build": "yarn tsc && yarn build:umd",
    "w:build": "concurrently \"yarn w:tsc\" \"yarn w:rollup\"",
    "w:tsc": "tsc -w",
    "w:browser": "browser-sync start --server --index 'example/index.html' --files 'umd/index.js' 'example/index.html'",
    "w:rollup": "rollup --watch --config",
    "test": "jest --watchAll"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "babel-jest": "^24.5.0",
    "browser-sync": "^2.26.3",
    "concurrently": "^4.1.0",
    "jest": "^24.5.0",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "jsdom": "^14.0.0",
    "rollup": "^1.7.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "typescript": "^3.3.4000"
  }
}
